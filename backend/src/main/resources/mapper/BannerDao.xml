<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.second.hand.trading.server.dao.BannerDao">
    <resultMap id="BaseResultMap" type="com.second.hand.trading.server.model.BannerModel">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="image_url" jdbcType="VARCHAR" property="imageUrl" />
        <result column="link_url" jdbcType="VARCHAR" property="linkUrl" />
        <result column="sort" jdbcType="INTEGER" property="sort" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="status" jdbcType="TINYINT" property="status" />
    </resultMap>

    <sql id="Base_Column_List">
        id, title, image_url, link_url, sort, create_time, status
    </sql>

    <select id="getAllActiveBanners" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM sh_banner
        WHERE status = 1
        ORDER BY sort ASC
    </select>

    <select id="getBannerById" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM sh_banner
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <select id="getAllBanners" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM sh_banner
        ORDER BY sort ASC
    </select>

    <insert id="insertBanner" parameterType="com.second.hand.trading.server.model.BannerModel">
        INSERT INTO sh_banner (title, image_url, link_url, sort, create_time, status)
        VALUES (#{title,jdbcType=VARCHAR}, #{imageUrl,jdbcType=VARCHAR}, #{linkUrl,jdbcType=VARCHAR},
                #{sort,jdbcType=INTEGER}, #{createTime,jdbcType=TIMESTAMP}, #{status,jdbcType=TINYINT})
    </insert>

    <update id="updateBanner" parameterType="com.second.hand.trading.server.model.BannerModel">
        UPDATE sh_banner
        SET title = #{title,jdbcType=VARCHAR},
            image_url = #{imageUrl,jdbcType=VARCHAR},
            link_url = #{linkUrl,jdbcType=VARCHAR},
            sort = #{sort,jdbcType=INTEGER},
            status = #{status,jdbcType=TINYINT}
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

    <delete id="deleteBanner" parameterType="long">
        DELETE FROM sh_banner
        WHERE id = #{id,jdbcType=BIGINT}
    </delete>
</mapper>
